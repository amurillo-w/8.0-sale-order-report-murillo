<?xml version="1.0" encoding="utf-8"?>
   <openerp>
      <data>        
         <template id="report_amurillosale">
            <t t-call="report.html_container">
               <t t-foreach="docs" t-as="o">
                  <t t-call="report.external_layout">
                     <div class="page">
                        <div class="oe_structure"/>
							   <div ><strong>Nombre y Direccion del cliente:</strong></div>
                        <!--Div que contiene la tabla con la direccion del cliente-->                       
                        <div ><table>
                                 <tr><td>Nombre: <span t-field="o.partner_id"/> </td></tr>
                                 <tr><td>Direccion: <span t-field="o.partner_id.street"/> </td></tr>
                                 <tr><td>Codigo Postal: <span t-field="o.partner_id.zip"/> 
                                  <span t-field="o.partner_id.city"/></td></tr>
                                 <tr><td>Pais: <span t-field="o.partner_id.country_id"/></td></tr>
                                 </table>
                           <!--Div que contiene la fecha y el nombre del vendedor-->
                           <div>                    
                             <br><strong >Fecha:</strong></br>
                             <br><p t-field="o.date_order"/></br>
                             <br><strong>Vendedor: </strong>
                             <p t-field="o.user_id.name"/></br>
                          </div>
                        </div>
                        <!--Div con la tabla de los articulos vendidos-->
                        <div class="row mt32 mb32">
                           
                           <!--Tabla creada con atributos de XHTML-->    
                           <table class="table table-condensed">							   
                              <thead >
                                 <!---Declaracion de los encabezados de la tabla-->
                                 <tr>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-right">Cantidad</th>
                                    <th class="text-right">Precio Unitario</th>
                                    <th class="text-right">Impuesto</th>
                                    <th class="text-right">Precio</th>
                                 </tr>
                              </thead>
                              
                              <!--Declaracion del cuerpo de la tabla-->
                              <tbody>
                                 <tr t-foreach="o.order_line" t-as="ol">
                                    <td><span t-field="ol.product_id"/></td>
                                    <td class="text-right"> <span t-field="ol.product_uom_qty"/></td>
                                    <td class="text-right"><span t-field="ol.price_unit"/></td>
                                    <td class="text-right"><span t-field="ol.tax_id"/></td>
                                    <td class="text-right"><span t-field="ol.price_subtotal"/></td>
                                 </tr>
                              </tbody>
                           </table>
                        <div class="row">
                           <div class="col-xs-4 pull-right">
                              <table class="table table-condensed">
                                 <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                       <span t-field="o.amount_untaxed"/>
                                    </td>
                                 </tr>
                                 <tr>
                                    <td>Impuestos</td>
                                    <td class="text-right">
                                       <span t-field="o.amount_tax"/>
                                     </td>
                                 </tr>
                                 <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                       <span t-field="o.amount_total"/>
                                    </td>
                                 </tr>
                              </table>
                           </div>
                        </div>
                        </div>                  
                        <div class="oe_structure"/>
                     </div>
                  </t>
               </t>                                   
            </t>
         </template>        
      </data>    
   </openerp>  
